#!/usr/bin/env php

<?php

// Try to locate the Composer autoloader from the project root
$autoloadFiles = [
    __DIR__ . '/../../../autoload.php', // Installed via vendor/mrogwang/saqle/bin/saqle
    __DIR__ . '/../vendor/autoload.php' // Local dev within repo
];

foreach ($autoloadFiles as $file) {
     if (file_exists($file)) {
         require $file;
         break;
     }
}

require_once __DIR__.'/../shortcuts/helpers.php';

use SaQle\Manage\Manage;
use SaQle\Config\AppConfig;

AppConfig::init()::load();

$argv[] = dirname(__FILE__);
(new Manage($argv))();

